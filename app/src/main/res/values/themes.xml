<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Base.Theme.TodosAppC38Online" parent="Theme.Material3.DayNight.NoActionBar">

         <item name="colorPrimary">@color/lightPrimary</item>
         <item name="colorPrimaryDark">@color/lightPrimary</item>
         <item name="colorPrimaryVariant">@color/lightPrimaryDark</item>
         <item name="colorOnPrimary">@color/white</item>


        <item name="colorSecondary">@color/lightSecondPrimary</item>
        <item name="colorSecondaryVariant">@color/lightPrimaryDark</item>
        <item name="colorOnSecondary">@color/white</item>

    </style>


    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_bg_light</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>

    <style name="Theme.TodosAppC38Online" parent="Base.Theme.TodosAppC38Online" />

    <style name="activity_background_color">
        <item name="android:background">@color/lightGreen</item>
    </style>

    <style name="bottom_navigation_bg" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="day_background">
        <item name="android:background">@color/white</item>

    </style>

    <style name="day_text_color">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="splash_bg">
        <item name="android:background">@color/lightGreen</item>
    </style>

    <style name="settingsViewColor">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="homeToolBarColor">
        <item name="android:backgroundTint">@color/blue</item>
    </style>

    <style name="calenderColor">
        <item name="android:background">@color/white</item>
        <item name="mcv_selectionColor">@color/blue</item>
        <item name="mcv_arrowColor">@color/cardColorDark</item>
    </style>

    <style name="spinner_text_color">
        <item name="android:textColor">@color/cardColorDark</item>
    </style>
</resources>